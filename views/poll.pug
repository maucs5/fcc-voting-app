html
  head
    title The Voting App
    script(src='https://code.jquery.com/jquery-2.2.4.min.js')
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js", integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa", crossorigin="anonymous")
    link(href="/public/main.css", rel='stylesheet')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.bundle.min.js")
    script(src='/public/chart_poll.js')
  body(class='container')

    nav(class='navbar navbar-default')
      div(class='collapse navbar-collapse')
        ul(class='nav navbar-nav navbar-left')
          li: a(href='/') The Voting App
        ul(class='nav navbar-nav navbar-right')
          if auth
            li: a(href='/mypolls') My Polls
            li: a(href='/newpoll') New Poll
            li(class='dropdown')
              a(href='#', class='dropdown-toggle', data-toggle='dropdown', role='button')= name
                span(class='caret')
              ul(class='dropdown-menu')
                li(role='separator', class='divider')
                li: a(href='/logout') Logout
          else
            li: a(href='/auth/github') Sign In

    div(class='jumbotron')
      h1(class='text-center') The Voting App
      h2(class='text-center')= data.name
      div(class='row')
        div(class='col-md-6 col-xs-12')
          form(id='poll-form', class='form-group', method='post', enctype="application/x-www-form-urlencoded")
            select(class='form-control', id='poll-select', name='select')
             option(selected disabled) Choose an option
             each v,i in data.options
                option(value=i)= i
             option(id='poll-select-custom', value='') I would like a custom option...
            div(style='margin-top:10px;margin-bottom:10px')
              input(class='form-control', id='poll-custom', type='text', placeholder='Name the option', style='display:none', name='custom')
            button(class='btn btn-default', type='submit') Submit
          a(href='https://twitter.com/share?text=voting%20app', class='btn btn-default') SHARE ON TWITTER

        div(class='col-md-6 col-xs-12')
          canvas(id='my-chart', width='200', height='200')
          if is_author
            button(id='poll-delete', type='submit', style='width:100%;margin-top:10px') Remove this poll
